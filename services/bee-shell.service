[Unit]
Description=Bee Web Shell (uvicorn)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=root
WorkingDirectory=/bee/web
EnvironmentFile=/bee/services/bee-shell.env
ExecStart=/usr/bin/uvicorn server:app --host 0.0.0.0 --port 8088
Restart=always
RestartSec=2
NoNewPrivileges=false
PrivateTmp=true

[Install]
WantedBy=multi-user.target
